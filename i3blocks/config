[pacman-updates]
command=/home/dc/.config/i3blocks/pac-update.py
markup=pango
interval=3600
QUIET=true
WATCH=^linux.* ^pacman.* ^emacs.*
BASE_COLOR=#5fff5f
UPDATE_COLOR=#FFFF85
AUR=true
LABEL= 
signal=3


[caps]
command=/home/dc/.config/i3blocks/caps.sh
interval=1
color=#ffffff
background=#9f5500
align=center
min_width=50
signal=2


[cpu]
command=/home/dc/.config/i3blocks/cpu
interval=persist
markup=pango
color=#ff0000
border=#ff0000
min_width=50
align=center

[memoria]
command=/home/dc/.config/i3blocks/memory.sh
interval=20
color=#52aeff
border=#52aeff

[ip]
#command=hostname -i | awk '{ print "IP:" $1 }'
command=ifconfig | grep 192 | awk '{print $2}' | sed 's/\/.*//g'
